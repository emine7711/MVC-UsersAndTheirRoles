
@{
    ViewBag.Title = "Ürün Güncelle";
}

@using MVC_CircloidTemplate.Models;
@model Product
<div class="row">
    <div class="col-md-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün @ViewBag.productFrom
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/UpdateProduct" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" name="ProductName" value="@Model.ProductName">
                            <input type="hidden" class="form-control" id="exampleInputPassword1" name="ProductID" value="@Model.ProductID">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat:</label>
                            <input asp-for="money" class="form-control" id="exampleInputPassword1" name="UnitPrice" value="@Model.UnitPrice">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Stok:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" name="UnitsInStock" value="@Model.UnitsInStock">
                        </div>
                        @*<div class="form-group">
                                <label for="exampleInputPassword1">Tedarikçi:</label>
                                <select class="form-control" name="SupplierID" value="@Model.Supplier.CompanyName">
                                    @foreach (Supplier spl in ViewBag.supList)
                                    {
                                        <option value="@spl.SupplierID" selected>@spl.CompanyName</option>
                                    }
                                </select>
                            </div>*@
                        @*<div class="form-group">
                                <label for="exampleInputPassword1">Kategori:</label>
                                <select class="form-control" name="CategoryID" value="@Model.Category.CategoryName">
                                    @foreach (Category ctg in ViewBag.catList)
                                    {
                                        <option value="@ctg.CategoryID" selected>@ctg.CategoryName
                                    </option>
                                    }
                                </select>
                            </div>*@
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tedarikçi:</label>
                            <select class="form-control" name="SupplierID">
                                @foreach (Supplier spl in ViewBag.supList)
                                {
                                    if (spl.SupplierID == Model.SupplierID)
                                    {
                                        <option value="@spl.SupplierID" selected>@spl.CompanyName</option>
                                    }
                                    else
                                    {
                                        <option value="@spl.SupplierID">@spl.CompanyName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori:</label>
                            <select class="form-control" name="CategoryID">
                                @foreach (Category ctg in ViewBag.catList)
                                {
                                    if (ctg.CategoryID == Model.CategoryID)
                                    {
                                        <option value="@ctg.CategoryID" selected>@ctg.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@ctg.CategoryID">@ctg.CategoryName</option>
                                    }
                                }
                            </select>
                        </div>
                        @if (ViewBag.productFrom == "Güncelle")
                         {
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                         }

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



