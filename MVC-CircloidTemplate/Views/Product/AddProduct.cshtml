
@{
    ViewBag.Title = "Ürün Ekleme";
}
@using MVC_CircloidTemplate.Models;

<div class="row">
    <div class="col-md-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Ekleme
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/AddProduct" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" name="ProductName" placeholder="Ürün Adı Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" name="UnitPrice"placeholder="Fiyat Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Stok:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" name="UnitsInStock" placeholder="Stok Miktarı Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tedarikçi:</label>
                            <select class="form-control" name="SupplierID">
                                @foreach (Supplier spl in ViewBag.supList)
                                 {
                                    <option value="@spl.SupplierID">@spl.CompanyName</option>
                                 }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori:</label>
                            <select class="form-control" name="CategoryID">
                                @foreach (Category ctg in ViewBag.catList)
                                 {
                                    <option value="@ctg.CategoryID">@ctg.CategoryName</option>
                                 }
                            </select>
                        </div>
                      
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
