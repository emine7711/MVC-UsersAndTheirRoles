
@{
    ViewBag.Title = "TedarikçiEkleme";
}

@using MVC_CircloidTemplate.Models;

<div class="row">
    <div class="col-md-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikçi Ekleme
                </div>
                <div class="block-controls">
                    <a href="/Supplier/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"><span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Supplier/AddSupplier" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tedarikçi Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" name="CompanyName" placeholder="Tedarikçi Adı Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Adres:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" name="Address" placeholder="Adres Giriniz">
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

